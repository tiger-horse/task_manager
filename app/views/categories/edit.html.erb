<%= render "shared/header" %>
<div class="main gr-categories-edit pt-5">
  <div class="w-50 h-75 m-auto text-center mt-5 mb-5 rounded-3 bg-light overflow-auto">
    <div class="room-name my-3 text-center">
      <div class="text-center d-flex flex-column justify-content-center align-items-center p-2">
      <%= form_with model: [@room, @category], class: 'form', id: "form" do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
        <div class="pt-3">
          <%= f.label :カテゴリー名, class: 'lavel ' %>
          <%= f.text_field :name, class: 'form-control ' %>
        </div>
        <div class="mt-3">
          <%= f.submit '保存',class: "mt-3" %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
<%= render "shared/footer" %>