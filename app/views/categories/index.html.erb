<%= render "shared/header" %>
<div class="main gr-categories-show pt-5">
  <div class="w-75 h-75 m-auto text-center mt-5 mb-5 rounded-3 bg-light overflow-auto">
  <div class="room-name my-3 text-center">
    <%= link_to "#{@room.name}詳細へ", room_path(@room.id),  class: "text-decoration-none text-white btn btn-secondary" %>
  </div>
<div class="text-center d-flex flex-column justify-content-center align-items-center p-2">
  <%= form_with model: [@room, @category], class: 'form', id: "form" do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
  <div class="mt-3">
    <%= f.label :カテゴリー名, class: 'lavel ' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
    <div class="mt-3">
    <%= f.submit '保存',class: "mt-3" %>
    </div>
  <% end %>

  <div class= "mt-5 ">
    <h2>カテゴリー一覧</h2>
    <% @categories.each do |category| %>
    <% if category.room_id == @room.id %>
    <div class="mt-3 d-flex ">
      <div class="me-5"> 
        <h5>
        <%= category.name %>
        </h5>
      </div>
     <%= link_to "カテゴリーの編集", edit_room_category_path(category.room_id, category.id), method: :get, class:"me-2 text-decoration-none text-primary"  %>
      <p class="">or</p>
      <%= link_to "削除", room_category_path(category.room_id, category.id), method: :delete, class:"ms-2 text-decoration-none text-danger", data: {confirm: "カテゴリーを削除しますか？"} %>
     <% end %>
    </div>
    <% end %>
  </div>
</div>
</div>
</div>
<%= render "shared/footer" %>

